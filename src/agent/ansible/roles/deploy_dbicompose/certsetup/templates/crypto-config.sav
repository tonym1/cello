---
{% if orderers | length > 0 %}
OrdererOrgs:
  - Name: Orderer
    Domain: blocledger.com
    Specs:
{%   for item in orderers %}
      - Hostname: {{ item.name }}
{%   endfor %}
{% endif %}

{% if peers | length > 0 %}

PeerOrgs:
{% for org in peerorgs %}
  - Name: {{ org }}
    Domain: {{ org }}.blocledger.com
    Template:
      Count: 2
    Specs:
{%   for item in peers %}
{%     if item.org == org %}
#      - Hostname: {{ item.name }}
{%     endif %}
{%   endfor %}
{% endfor %}
{% endif %}
